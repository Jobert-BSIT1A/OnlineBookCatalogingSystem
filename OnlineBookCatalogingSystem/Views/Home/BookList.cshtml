@model IEnumerable<OnlineBookCatalogingSystem.Models.Book>

@{
    ViewBag.Title = "BookList";
}

<h2>Fiction Books</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 text-center">
                    <img src="@book.CoverImageUr1" class="card-img-top mx-auto d-block" alt="cover" style="width: 100px; height: auto; margin-top: 15px;" />
                    <div class="card-body text-start">
                        <h5 class="card-title">@book.Title</h5>
                        <div class="lh-sm">
                            <p class="mb-1 fw-bold">Description</p>
                            <p class="mb-0">
                                @(book.Description.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description)
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>